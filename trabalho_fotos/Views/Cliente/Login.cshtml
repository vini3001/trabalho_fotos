@model trabalho_fotos.Models.Cliente

@if (TempData["Message"] != null)
{
    <div class="alert alert-warning" role="alert">
        @TempData["Message"]
    </div>
}

<div class="container" style="width:50vw; border-radius: 5px; background-color:lightgray; padding:10px">
    <form asp-action="Login" style="display:flex; flex-direction: column; gap:10px; justify-content: center" method="post">
        <div class="form-group">
            <label for="exampleInputEmail1">Email</label>
            <input asp-for="Email" type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp" placeholder="Insira o seu email">
        </div>
        <div class="form-group">
            <label for="exampleInputPassword1">Senha</label>
            <input asp-for="Password" type="password" class="form-control" id="exampleInputPassword1" placeholder="Insira a sua senha">
        </div>
        <button style="width: 30%" type="submit" class="btn btn-primary">Login</button>
    </form>
</div>